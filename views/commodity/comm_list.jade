extends ../home/home

block sidebar_list
	include ../sidebar.jade

block main_content
	div.breadcrumbs.breadcrumbs-fixed#breadcrumbs
		ul.breadcrumb
			li
				i.ace-icon.fa.fa-home.home-icon
				| 首页
			li
				| 商品管理
			li.active
				| 商品列表
	div.page-content
		div.row
			div.col-xs-12
				h3.header.smaller.lighter.blue 商品数据表
				div.table-header 所有商品详细信息
				div
					div#sample-table-commodity_wrapper.dataTables_wrapper.form-inline-no-footer
						//- div.row
						//- 	div.col-xs-6
						//- 		div.dataTables_length#sample-table-commodity_length
						//- 			label 显示 
						//- 				select(name="sample-table-commodity_length",aria-controls="sample-table-commodity",style={'display':'inline-block'}).form-control.input-sm
						//- 					option(value="10") 10
						//- 					option(value="25") 25
						//- 					option(value="50") 50
						//- 					option(value="100") 100
						//- 				| 条数据
						//- 	div.col-xs-6
						//- 		div.sample-table-commodity_filter.dataTables_filter
						//- 			label 查询：
						//- 				input(type="search",aria-controls="sample-table-commodity",style={'display':'inline-block'}).form-control.input-sm
						table#sample-table-commodity.table.table-striped.table-bordered.table-hover.dataTable.no-footer(role="grid",aria-describedby="sample-table-commodity_info")
							thead
								tr(role="row")
									th.center.sorting_disabled(rowspan="1",colspan="1",aria-label="")
										label.position-relative
											input(type="checkbox").ace
											span.lbl
									th.sorting(tabindex="0",aria-controls="sample-table-commodity",rowspan="1",colspan="1",aria-label="id: activate to sort column ascending") 编号
									th.sorting(tabindex="0",aria-controls="sample-table-commodity",rowspan="1",colspan="1",aria-label="name: activate to sort column ascending") 商品名称
									th.sorting(tabindex="0",aria-controls="sample-table-commodity",rowspan="1",colspan="1",aria-label="price: activate to sort column ascending") 商品单价
									th.sorting_disabled(rowspan="1",colspan="1",aria-label="")
							tbody
								each commodity, index in commodities
									- var odd_even = '';
									if index % 2 === 0
										- odd_even = 'even';
									else
										- odd_even = 'odd';
									tr(role="row",class="#{odd_even}")
										td.center
											label.position-relative
												input(type="checkbox").ace
												span.lbl
										td(data-id="#{commodity.id}")
											| #{commodity.id}
										td
											| #{commodity.name}
										td
											| #{commodity.price}
										td
											div.hidden-sm.hidden-xs.action-buttons
												a.blue(href="#")
													i.ace-icon.fa.fa-search-plus.bigger-130
												a.green(href="#")
													i.ace-icon.fa.fa-pencil.bigger-130
												a.red(href="#")
													i.ace-icon.fa.fa-trash-o.bigger-130
											div.hidden-md.hidden-lg
												div.inline.position-relative
													button.btn.btn-minier.btn-yellow.dropdown-toggle(data-toggle="dropdown",data-position="auto")
														i.ace-icon.fa.fa-caret-down.icon-onle.bigger-120
													ul.dropdown-menu.dropdown-only-icon.dropdown-yellow.dropdown-menu-right.dropdown-caret.dropdown-close
														li
															a(href="#",data-rel="tooltip",title,data-original-title="View").tooltip-info
																span.blue
																	i.ace-icon.fa.fa-search-plus.bigger-120
														li
															a(href="#",data-rel="tooltip",title,data-original-title="Edit").tooltip-info
																span.green
																	i.ace-icon.fa.fa-pencil-square-o.bigger-120
														li
															a(href="#",data-rel="tooltip",title,data-original-title="Delete").tooltip-info
																span.red
																	i.ace-icon.fa.fa-trash-o.bigger-120
						//- div.row
						//- 	div.col-xs-6
						//- 		div.dataTables_info#sample-table-commodity_info(role="status",aria-live="polite")
						//- 			| 从#{commodities.length}个条目中，显示第1到第10条
						//- 	div.col-xs-6
						//- 		div.dataTables_paginate.pagin_simple_numbers#sapmle-table-2_paginate
						//- 			ul.pagination
						//- 				li.paginate_button.previous.disabled(aria-controls="sample-table-commodity",tabindex="0")#sample-table-commodity_previouse
						//- 					a(href="#") 上一页
						//- 				li.paginate_button.next(aria-controls="sample-table-commodity",tabindex="0")#sample-table-commodity_next
						//- 					a(href="#") 下一页
	script(src="http://127.0.0.1:3000/aceadmin/assets/js/jquery.dataTables.min.js")
	script(src="http://127.0.0.1:3000/aceadmin/assets/js/jquery.dataTables.bootstrap.js")
	script(src="http://127.0.0.1:3000/javascripts/commodity/commodity_list.js")